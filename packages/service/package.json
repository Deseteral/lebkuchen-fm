{
  "name": "lebkuchen-fm-service",
  "version": "2.0.0",
  "description": "LebkuchenFM backend service",
  "main": "src/main.js",
  "repository": "https://github.com/Deseteral/lebkuchen-fm.git",
  "author": "Deseteral <deseteral@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node build/main.js",
    "build": "rm -rf build && babel src -d build --extensions '.ts,.js' --copy-files",
    "dev": "npm run build && npm run start",
    "test": "npm run test:type-check && npm run test:lint",
    "test:type-check": "tsc --noEmit",
    "test:type-check:watch": "npm run test:type-check -- --watch",
    "test:lint": "eslint src --ext js,jsx,ts,tsx"
  },
  "dependencies": {
    "body-parser": "1.19.0",
    "compression": "1.7.4",
    "express": "4.17.1",
    "mongodb": "3.6.2",
    "node-fetch": "2.6.1"
  },
  "devDependencies": {
    "@babel/cli": "7.11.6",
    "@babel/core": "7.11.6",
    "@babel/preset-env": "7.11.5",
    "@babel/preset-typescript": "7.10.4",
    "@deseteral/eslint-config": "2.1.1",
    "@types/body-parser": "1.19.0",
    "@types/compression": "1.7.0",
    "@types/express": "4.17.8",
    "@types/mongodb": "3.5.27",
    "@types/node-fetch": "2.5.7",
    "eslint": "7.10.0",
    "typescript": "4.0.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/typescript"
    ]
  },
  "eslintConfig": {
    "extends": "@deseteral/eslint-config/typescript",
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "error",
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ]
    }
  }
}
