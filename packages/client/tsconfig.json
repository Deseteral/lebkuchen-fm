{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "declarationDir": "build/types",
    "declaration": true,
    "strict": true,
    "jsx": "react",
    "target": "es2018",
    "moduleResolution": "node",
    "lib": [
      "DOM",
      "es2018"
    ],
    "types": [
      "react",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@service/*": [
        "../service/src/*"
      ],
      "*": [
        "node_modules/*"
      ]
    },
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
