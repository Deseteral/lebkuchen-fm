{
  "plugins": [
    "solid"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:solid/recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "browser": true,
    "es2020": true
  },
  "ignorePatterns": [
    "dist",
    ".eslintrc"
  ],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "@typescript-eslint/ban-ts-comment": "off",
    "quotes": [ "error", "single", { "avoidEscape": true } ],
    "object-curly-spacing": [
      "error",
      "always"
    ]
  }
}
