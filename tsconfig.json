{
  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "dist",
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "server/types/*"
      ]
    }
  },
  "include": [
    "server/**/*"
  ]
}
